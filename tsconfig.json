{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/src/*"],
      "@backend/*": ["backend/src/*"]
    }
  },
  "include": ["e2e/**/*", "backend/**/*", "frontend/**/*"],
  "exclude": ["node_modules", "dist", "build", ".next"]
}
